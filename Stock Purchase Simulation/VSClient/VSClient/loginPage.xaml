        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="642,229,0,0" VerticalAlignment="Top" Height="38" Width="138" FontSize="18" FontWeight="Bold" Click="btnLogin_Click"/>
        <Button x:Name="btnCreateUser" Content="Create User" HorizontalAlignment="Left" Margin="639,438,0,0" VerticalAlignment="Top" Height="43" Width="141" FontSize="18" FontWeight="Bold" Click="btnCreateUser_Click"/>
        <TextBlock x:Name="lblPassword1" HorizontalAlignment="Left" Margin="160,205,0,0" Text="Username:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="142" Height="34" FontWeight="Bold"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="321,197,0,0" Text="" VerticalAlignment="Top" Height="44" Width="241"/>
        <TextBlock x:Name="lblPassword" HorizontalAlignment="Left" Margin="160,263,0,0" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="141" Height="35" FontWeight="Bold"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Margin="322,436,0,0" Text="" VerticalAlignment="Top" Height="48" Width="240"/>
        <TextBlock x:Name="lblPassword1_Copy" HorizontalAlignment="Left" Margin="162,447,0,0" Text="First Name:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Width="141" Height="30" FontWeight="Bold"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="321,260,0,0" VerticalAlignment="Top" Width="242" Height="44"/>

    </Grid>
</Page>
